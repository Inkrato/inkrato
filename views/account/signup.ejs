<h1 class="page-header">Sign up</h1>
<div class="row">
  <% if (site.loginOptions('facebook') || site.loginOptions('google') || site.loginOptions('twitter') || site.loginOptions('github') ) { %>
  <div class="col-sm-5">
    <h3>Use an existing account</h3>
    <br/>
    <% if (site.loginOptions('facebook')) { %>
    <a href="/auth/facebook" class="btn btn-lg btn-block btn-default btn-facebook btn-social"><i class="fa fa-lg fa-fw fa-facebook"></i> Sign in with Facebook</a>
    <% } %>
    <% if (site.loginOptions('google')) { %>
    <a href="/auth/google" class="btn btn-lg btn-block btn-default btn-google-plus btn-social"><i class="fa fa-lg fa-fw fa-google-plus"></i> Sign in with Google</a>
    <% } %>
    <% if (site.loginOptions('twitter')) { %>
    <a href="/auth/twitter" class="btn btn-lg btn-block btn-default btn-twitter btn-social"><i class="fa fa-lg fa-fw fa-twitter"></i> Sign in with Twitter</a>
    <% } %>
    <% if (site.loginOptions('github')) { %>
    <a href="/auth/github" class="btn btn-lg btn-block btn-default btn-github btn-social"><i class="fa fa-lg fa-fw fa-github"></i> Sign in with GitHub</a>
    <% } %>
  </div>
  <% } else { %>
  <div class="col-sm-3">&nbsp;</div>
  <% } %>
  <% if ((site.loginOptions('facebook') || site.loginOptions('google') || site.loginOptions('twitter') || site.loginOptions('github')) && site.loginOptions('email') ) { %>
  <div class="col-sm-1 text-center text-muted lead hidden-sm hidden-xs" style="margin-top: 10%;">or</div>
  <% } %>
  <div class="col-sm-6">
    <h3>Sign up via email</h3>
    <br/>
    <form name="signup" method="post" action="/signup" data-validator="true">
      <div class="messages"></div>
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
      <div class="form-group">
        <label for="email" class="control-label">Email</label>
        <input type="email" name="email" id="email" placeholder="Email" autofocus="" class="form-control">
      </div>
      <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <input type="password" name="password" id="password" placeholder="Password" class="form-control">
      </div>
      <div class="form-group">
        <label for="confirmPassword" class="control-label">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" class="form-control">
      </div>
      <div class="form-group">
        <button type="submit" class="btn pull-right btn-primary"><i class="fa fa-fw fa-user-plus"></i> Create account</button>
        <a class="pull-left btn btn-link" href="/login">Already have an account?</a>
      </div>
      <p></p>
    </form>
  </div>
</div>
<br/>
<br/>
